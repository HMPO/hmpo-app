{
  "name": "hmpo-app",
  "version": "2.4.0",
  "description": "Bootstrap middleware and templating",
  "author": "HMPO",
  "license": "MIT",
  "private": false,
  "engineStrict": true,
  "engines": {
    "node": ">=12",
    "npm": ">=6"
  },
  "main": "index.js",
  "scripts": {
    "start": "node app.js",
    "pretest": "npm run test:lint",
    "test": "npm run test:unit",
    "posttest": "check-audit --registry 'https://registry.npmjs.org'",
    "test:lint": "eslint . && hmpo-lintapostrophes",
    "test:unit": "nyc _mocha"
  },
  "dependencies": {
    "async": "^3.2.4",
    "body-parser": "^1.20.0",
    "compression": "^1.7.4",
    "connect-redis": "^6.1.3",
    "cookie-parser": "^1.4.6",
    "debug": "^4.3.4",
    "deep-clone-merge": "^1.5.4",
    "express-session": "^1.17.3",
    "fakeredis": "^2.0.0",
    "frameguard": "^4.0.0",
    "helmet": "5.1.0",
    "nocache": "^3.0.4",
    "on-finished": "^2.4.1",
    "redis": "4.0.x",
    "underscore": "^1.13.4",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "chai": "^4.3.6",
    "eslint": "^8.18.0",
    "express": "^4.18.1",
    "govuk-frontend": "^4.0.1",
    "hmpo-components": "^5.3.1",
    "hmpo-config": "^2.2.1",
    "hmpo-i18n": "^5.0.2",
    "hmpo-logger": "^6.1.1",
    "hmpo-node-standards": "^1.11.2",
    "husky": "^2.7.0",
    "mocha": "^10.0.0",
    "npm-audit-resolver": "^3.0.0-7",
    "nunjucks": "^3.2.3",
    "nyc": "^15.0.0",
    "proxyquire": "^2.1.3",
    "reqres": "^3.0.1",
    "sinon": "^14.0.0",
    "sinon-chai": "^3.7.0"
  },
  "peerDependencies": {
    "express": ">=4",
    "govuk-frontend": ">=4",
    "hmpo-components": ">=5",
    "hmpo-config": ">=2",
    "hmpo-i18n": ">=5",
    "hmpo-logger": ">=4",
    "nunjucks": ">=3"
  },
  "husky": {
    "hooks": {
      "pre-push": "hmpo-checkgit && npm test",
      "commit-msg": "hmpo-commitmsg > /dev/null || true"
    }
  },
  "mocha": {
    "require": "test/unit/helper",
    "spec": "test/unit/**/spec.*.js"
  },
  "nyc": {
    "all": true,
    "exclude": [
      "example/**",
      "coverage/**",
      "test/**"
    ],
    "check-coverage": true,
    "skip-full": true,
    "temp-directory": "coverage/.nyc_output",
    "reporter": [
      "text-summary",
      "text",
      "lcov"
    ],
    "statements": 100,
    "branches": 100,
    "functions": 100,
    "lines": 100
  }
}
